<!-- ğŸ§­ Single Travel Card (Admin View) -->

<div class="travel-card-header">
  <h3><%= m.name %></h3>
  <% if (m.adminDeclared) { %>
    <span class="dot dot-ok" title="Admin has declared this travel"></span>
  <% } else { %>
    <span class="dot dot-red" title="Not declared yet"></span>
  <% } %>
</div>

<div class="travel-meta"><strong>Destinations:</strong> <%= m.team_a %> OR <%= m.team_b %></div>
<div class="travel-meta"><strong>Start (IST):</strong> <%= m.startIstStr %></div>
<div class="travel-meta"><strong>Cutoff (IST):</strong> <%= m.cutoffIstStr %></div>
<div class="travel-meta"><strong>Time Left:</strong> <%= m.timeLeftLabel %></div>
<div class="travel-meta"><strong>Points:</strong> <%= m.entry_points %></div>
<div class="travel-meta"><strong>Status:</strong> <%= m.status %></div>

<!-- ğŸ¯ Action Buttons -->
<div class="travel-actions" style="margin-top:0.75rem; display:flex; gap:0.5rem; flex-wrap:wrap;">
  <!-- ğŸ§­ Planner -->
  <a class="btn btn-small"
     href="/admin/series/<%= series.id %>/matches/<%= m.id %>/planner">
     ğŸ§­ Planner
  </a>

  <!-- âœï¸ Edit -->
  <a class="btn btn-small btn-outline"
   href="/admin/series/<%= series.id %>/matches/<%= m.id %>/edit">
   âœï¸ Edit
</a>

  <!-- âŒ Delete -->
  <form method="POST"
      action="/admin/matches/<%= m.id %>/delete"
      onsubmit="return confirm('Delete this travel? This cannot be undone.');">
  <button type="submit" title="Delete Travel"
          style="position:absolute;top:8px;right:8px;background:none;border:none;font-size:1.2em;cursor:pointer;color:#c00;">
    âŒ
  </button>
</form>
</div>
