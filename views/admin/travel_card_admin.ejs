<!-- ðŸ’¼ ADMIN Travel Card -->
<div class="travel-card" style="position:relative;">
<!-- âŒ Delete Button -->
<form method="POST" action="/admin/series/<%= series.id %>/matches/<%= m.id %>/delete"
      onsubmit="return confirm('Are you sure you want to delete <%= m.name %>? This action cannot be undone.');"
      style="position:absolute; top:8px; right:10px;">
  <button type="submit" class="btn btn-small btn-danger" style="padding:2px 6px; font-size:0.8rem;">âœ–</button>
</form>
  <!-- ðŸŸ¢ Admin Declaration Indicator -->
  <div class="travel-card-header">
    <span class="status-dot <%= m.adminDeclared ? 'status-green' : 'status-red' %>"
      title="<%= m.adminDeclared ? 'Admin has declared this travel' : 'Travel not yet declared' %>"></span>
    <h3><%= m.name %></h3>
  </div>

  <!-- ðŸ“… Travel Details -->
  <div class="travel-meta"><strong>Destinations:</strong> <%= m.team_a %> OR <%= m.team_b %></div>
  <div class="travel-meta"><strong>Start (IST):</strong> <%= m.startIstStr %></div>
  <div class="travel-meta"><strong>Cutoff (IST):</strong> <%= m.cutoffIstStr %></div>
  <div class="travel-meta"><strong>Time until cutoff:</strong> <%= m.timeLeftLabel %></div>
  <div class="travel-meta"><strong>Entry:</strong> <%= m.entry_points %></div>
  <div class="travel-meta"><strong>Status:</strong> <%= m.status %></div>

  <!-- âš™ï¸ Action Buttons -->
  <div class="travel-actions">
    <a class="btn btn-small" href="/admin/series/<%= series.id %>/matches/<%= m.id %>/edit">Edit</a>
    <a class="btn btn-small" href="/admin/series/<%= series.id %>/matches/<%= m.id %>">Planner</a>
  </div>
</div>
