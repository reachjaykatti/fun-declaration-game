<% /* Inline card markup (from your original matches.forEach) */ %>
<div class="travel-card" style="position:relative;">

  <!-- ðŸŸ¢ Admin Declaration Indicator -->
  <div class="travel-card-header">
    <span class="status-dot <%= m.admin_declared ? 'status-green' : 'status-red' %>"
      title="<%= m.admin_declared ? 'Admin has declared this travel' : 'Travel not yet declared' %>"></span>
    <h3><%= m.name %></h3>
  </div>

  <% if (m.status === 'completed' && m.user_points !== undefined && m.user_points !== null) { %>
  <span class="points-badge <%= m.user_points >= 0 ? 'points-positive' : 'points-negative' %>">
    <%= Number(m.user_points).toFixed(2) %>
  </span>
<% } %>

  <% 
    let userBoxClass = 'status-grey';
    if (m.status === 'completed') {
      if (m.user_points > 0) userBoxClass = 'status-green';
      else userBoxClass = 'status-red';
    } else if (m.user_has_predicted) {
      userBoxClass = 'status-green';
    } else if (m.locked) {
      userBoxClass = 'status-red';
    }
  %>
  <div class="status-box <%= userBoxClass %>"></div>

  <div class="travel-meta"><strong>Destinations:</strong> <%= m.team_a %> <%= labels.vs %> <%= m.team_b %></div>
  <div class="travel-meta"><strong>Start (IST):</strong> <%= m.start_time_ist %></div>
  <div class="travel-meta"><strong>Cutoff (IST):</strong> <%= m.cutoff_time_ist || '-' %></div>
  <div class="travel-meta"><strong>Time until cutoff:</strong> <%= m.time_left %></div>
  <div class="travel-meta"><strong>Entry:</strong> <%= m.entry_points %></div>
  <div class="travel-meta"><strong>Status:</strong> <%= m.status %></div>

  <% if (m.user_has_predicted) { %>
    <div class="travel-meta planned-dest">
      ðŸ§­ Planned: <strong><%= m.user_predicted_name %></strong>
    </div>
  <% } %>

  <div class="travel-actions">
    <a class="btn btn-small" href="/series/<%= series.id %>/matches/<%= m.id %>">Details</a>

    <% if (m.status === 'completed') { %>
      <span class="text-muted">Travel Completed</span>
    <% } else if (!m.locked && m.status === 'scheduled' && !m.user_has_predicted) { %>
      <form class="inline js-confirm-double" method="post"
        action="/series/<%= series.id %>/matches/<%= m.id %>/predict"
        data-confirm1="Confirm travel plan: <%= m.team_a %>?"
        data-confirm2="Finalize travel plan: <%= m.team_a %>?">
        <input type="hidden" name="team" value="A" />
        <button class="btn btn-small" type="submit"><%= labels.declare %> <%= m.team_a %></button>
      </form>

      <form class="inline js-confirm-double" method="post"
        action="/series/<%= series.id %>/matches/<%= m.id %>/predict"
        data-confirm1="Confirm travel plan: <%= m.team_b %>?"
        data-confirm2="Finalize travel plan: <%= m.team_b %>?">
        <input type="hidden" name="team" value="B" />
        <button class="btn btn-small" type="submit"><%= labels.declare %> <%= m.team_b %></button>
      </form>

    <% } else if (m.user_has_predicted) { %>
      <span class="chip chip-ok">
        <span class="dot dot-ok"></span> Planned: <strong><%= m.user_predicted_name %></strong>
      </span>
    <% } else { %>
      <span class="text-muted">Travel planning closed</span>
    <% } %>
  </div>
</div>
